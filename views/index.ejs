<!doctype html>
<html>
<head>
    <link href="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.7/angular.min.js"></script>
  <!-- <link href="style.css" rel="stylesheet"> -->
  <script src="https://fonts.googleapis.com/css?family=Open+Sans:400,600"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <script src="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>


</head>
<body>

<div ng-app="myapp">
    <div class="container" ng-controller="myctrl">

      <div class="page-header">
        <h1>Amp It Up <small>Shorten Your URL's</small></h1>
      </div>


      <div class="form-group">
        <label for="url">Long URL</label>
        <input type="text" id="filename" class="form-control" ng-model="longurl">
      </div>


<!-- Button to trigger modal -->
  <a href="#randomUrl" class="btn btn-primary" ng-click="randomShortener()" data-toggle="modal">Random Shortener</a>

  <a href="#customUrl" class="btn btn-primary" data-toggle="modal">Customizable Shortener</a>

<!-- Table to display existing URL's: -->
 <table>

      <thead>
      <tr>
        <td>
           Original Link
        </td>
        <td>
           Shortened Link
        </td>
        <td>
           Date Generated
        </td>
        <td>
            Times Clicked
        </td>
      </tr>
    </thead>

     <tbody>
      <tr ng-repeat="url in allUrls | orderBy:'-id'">
        <td>{{ url.url }}</td>
        <td ng-if"url.hash"><a target="_blank" href="{{ baseUrl + url.hash }}">{{ baseUrl + url.hash }}</a></td>
        <td>{{ url.date }}</a></td>
        <td class="text-right">{{ url.num_of_clicks }}</a></td>    
      </tr>
     </tbody>
 </table>

<script>
     var myapp = angular.module('myapp', []);

      myapp.controller('myctrl', function ($scope,$http) {

       $scope.baseUrl = window.location.href;

       $http.get('/geturls')
          .success(function(data) {
          console.log('allUrls: ',data);
          $scope.allUrls = data;
      })
            .error(function(data) {
          console.log('Error: ' + data);
      });

      $scope.randomShortener = function() { 
          $http.get('/add?url=' + $scope.longurl)
            .success(function(data) {
              console.log(data);
              $scope.newUrl = data.url;
                  //update Page
                  $http.get('/whatis?url=' + data.url)
                    .success(function(data2) {
                    console.log('new shortlink',data2);
                    data2.
                    $scope.allUrls.push(data2);
                 })
                    .error(function(data) {
                    console.log('Error: ' + data);
                 }); 
          })
          .error(function(data) {
          console.log('Error: ' + data);
         });
       };

       $scope.customShortener = function() {
          console.log('called custom shortener with this vanity', $scope.vanity); 
          $http.get('/add?url=' + $scope.longurl + 
              '&vanity=' + $scope.vanity)
              .success(function(data) {
                console.log(data);
                $scope.newUrl = data.url;
                    //update Page
                  $http.get('/whatis?url=' + data.url)
                    .success(function(data2) {
                    console.log('new shortlink',data2);
                    $scope.allUrls.push(data2);
                 })
                    .error(function(data) {
                    console.log('Error: ' + data);
                 }); 
          })
          .error(function(data) {
          console.log('Error: ' + data);
         });
       };

    });
</script>

<br>

<!-- Modal #2- Customizable Shortener -->
<div class="container">
  <!-- Modal -->
  <div class="modal fade" id="randomUrl" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
          <h4 class="modal-title">Your link is ready!</h4>
        </div>
        <div class="modal-body">
          <a href="{{newUrl}}" target="_blank">{{newUrl}}</a>
        </div>
          

        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
</div>


<!-- Modal #2- Customizable Shortener -->
<div class="container">
  <!-- Modal -->
  <div class="modal fade" id="customUrl" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
          <h4 class="modal-title">Customizable Short Link</h4>
        </div>
        <div class="modal-body">
          
            <div class="form-group">
              <label for="filename">Add your vanity text: 
                <span>i.e. {{baseUrl + vanity}}</label>
              <input type="text" id="filename" class="form-control" ng-model="vanity"> 
            </div>
        </div>
          

        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary"  ng-click="customShortener()">Create Custom Link</button>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
</div>





<!-- Closing top divs that are part of ng-app -->
    </div>
</div>

</body>
</html>
